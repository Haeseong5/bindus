<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo"></ImageView>




    <LinearLayout
        android:id="@+id/login_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_email_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:hint="e-mail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            android:textColor="#494949"
            android:textSize="16sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/login_password_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="sans-serif"
            android:hint="password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:textColor="#494949"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

    <Button
        android:id="@+id/login_email_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/login_input_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorMain"
        android:text="이메일로 로그인"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/login_facebook_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/login_email_button"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorFacebook"
        android:text="facebook으로 로그인"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/login_google_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/login_facebook_button"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="#CB3524"
        android:text="구글으로 로그인"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/login_find_email"
        android:layout_above="@+id/text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디/비밀번호 찾기"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="#494949"
        android:textSize="14dp" />



    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 바인더스의 회원이 아니신가요?"
            android:textColor="#494949"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/login_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:clickable="true"
            android:text="회원가입"
            android:textColor="@color/colorMain"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>