<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리더 신청"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorMain"
                android:textStyle="bold"
                android:textSize="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임 이름"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:hint="진행하고자 하는 모임의 이름과 카테고리를 입력해 주세요. (예: 렛츠 비어! / 친목)"
                android:textColor="@color/colorDarkGrey"
                android:background="@drawable/edit_shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임 소개"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:hint="모임을 소개해주세요.\n(예: 우리의 지친 일상을 달래주는 맥주, 이제는 조금 더 알아보고 즐겁게 마셔보는 모임입니다.)"
                android:textColor="@color/colorDarkGrey"
                android:background="@drawable/edit_shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임진행 가능시간"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:hint="모임을 진행하실 수 있는 시간을 입력해주세요.\n(예: 매주 금요일 7시, 8월27일 3시 등)"
                android:textColor="@color/colorDarkGrey"
                android:background="@drawable/edit_shape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임 지역"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:hint="희망하는 모임지역을 입력해주세요. \n(예: 서울 강남, 인천 미추홀구 등)"
                android:textColor="@color/colorDarkGrey"
                android:background="@drawable/edit_shape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:hint="경력이나 기타 사항이 있다면 입력해주세요."
                android:textColor="@color/colorDarkGrey"
                android:background="@drawable/edit_shape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참가비"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:hint="희망참가비를 입력해주세요.(예: 1인당 n만원)"
                android:textColor="@color/colorDarkGrey"
                android:background="@drawable/edit_shape"/>
            <Button
                android:id="@+id/leader_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="신청하기"
                android:textColor="@color/colorWhite"
                android:background="@color/colorMain"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>