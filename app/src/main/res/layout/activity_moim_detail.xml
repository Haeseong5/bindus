<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/detail_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_below="@+id/detail_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/detail_layout"
            android:orientation="vertical"
            android:layout_below="@id/detail_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/detail_tab_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDarkGrey"
                android:fontFamily="@font/nanumsquare_extra_bold"
                android:layout_gravity="center"/>
            <LinearLayout
                android:id="@+id/detail_slider"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorMain"
                android:layout_marginVertical="20dp">
            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/detail_viewpager"
                android:layout_width="match_parent"
                android:background="@color/colorMain"
                android:layout_height="300dp">

            </androidx.viewpager.widget.ViewPager>

            <!--<TextView-->
                <!--android:id="@+id/detail_title"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
            <TextView
                android:id="@+id/detail_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="place"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorMain"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:textSize="20sp"
                android:textColor="@color/colorMain"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textSize="20sp"
                android:textColor="#A7A7A7"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content"
                android:textSize="20sp"
                android:textColor="#A7A7A7"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/detail_button"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="모임 신청하기"
                android:background="@color/colorMain"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginVertical="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"></Button>
            <LinearLayout
                android:id="@+id/detail_slider2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorMain"
                android:layout_marginVertical="20dp">
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모임 후기"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorMain"/>
                <LinearLayout
                    android:id="@+id/moim_write_layout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:background="@drawable/edit_shape"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_write"/>
                    <TextView
                        android:id="@+id/detail_reivew_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"
                        android:text="후기 작성하기"/>
                </LinearLayout>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/review_recyclerview"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <Button
                android:id="@+id/detail_allview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="후기 모두보기"
                android:background="@drawable/edit_shape"
                android:layout_gravity="right"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorMain"></Button>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>